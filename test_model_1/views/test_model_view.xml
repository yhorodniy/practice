<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id='view_test_model_tree' model='ir.ui.view'>
            <field name='name'>test.model.tree</field>
            <field name='model'>test.model</field>
            <field name='arch' type='xml'>
                <tree string='Test model'>
                    <field name='first_num' string='First Number' />
                    <field name='second_num' string='Second Number' />
                    <field name='sum_num' string='Sum Numbers' />
                    <field name='subtracting_num' string='Subtracting Numbers' />
                    <field name='multiply_num' string='Multiply Numbers' />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id='view_test_model_form' model='ir.ui.view'>
            <field name='name'>test.model.form</field>
            <field name='model'>test.model</field>
            <field name='arch' type='xml'>
                <form string='Test model'>
                    <div> Title <field name='name' /> </div>
                    <div>
                        <div> First Number <field name='first_num' /> </div>
                        <div> Second Number <field name='second_num' /> </div>
                        <div> Operation <field name='operation_type' /> </div>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>