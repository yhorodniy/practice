<odoo>
    <data>
        <!-- Kanban view -->
        <record id="view_test_model_kanban" model="ir.ui.view">
            <field name="name">hw.page.kanban</field>
            <field name="model">hw.page</field>
            <field name="arch" type="xml">
                <kanban records_draggable='False'>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div> <strong> <field name='name' /> </strong> </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>