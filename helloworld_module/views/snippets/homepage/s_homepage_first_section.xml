<odoo>
    <template id="s_homepage_first_section" inherit_id="website.s_carousel">
        
        <xpath expr='//ol/li[3]' position='after'>
            <li t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="3"/>
            <li t-attf-data-bs-target="#myCarousel{{uniq}}" data-bs-slide-to="4"/>
        </xpath>

        <xpath expr="//div[@class='carousel-inner']/div[1]" position="attributes">
            <!-- <attribute name="class" add="darken-bg" separator=" "/> -->
            <attribute name="style">
                background-image: url('/helloworld_module/static/src/img/main_page/first_section_carousel_1.jpg');
                height: 800px
            </attribute>
        </xpath>


        <xpath expr="//div[@class='carousel-inner']/div[2]" position="attributes">
            <!-- <attribute name="class" add="darken-bg"  separator=" "/> -->
            <attribute name="style">
                background-image: url('/helloworld_module/static/src/img/main_page/first_section_carousel_2.jpg');
                height: 800px
            </attribute>
        </xpath>

        <xpath expr="//div[@class='carousel-inner']/div[3]" position="attributes">
            <!-- <attribute name="class" add="darken-bg"  separator=" "/> -->
            <attribute name="style">
                background-image: url('/helloworld_module/static/src/img/main_page/first_section_carousel_3.jpg');
                height: 800px
            </attribute>
        </xpath>
        
        <xpath expr="//div[@class='carousel-inner']" position="inside">

            <div class="carousel-item oe_img_bg o_bg_img_center pt152 pb152 darken-bg" style="background-image: url('/helloworld_module/static/src/img/main_page/first_section_carousel_4.jpg');height: 800px" data-name="Slide" height="800px">
                <div class="container oe_unremovable">
                    <div class="row">
                        <div class="carousel-content col-lg-9 hw_mainpage_carousel">
                            <h2 class="display-2-fs">To do with Odoo.</h2>
                            <p class="lead">Диджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи.</p>
                            <div class="row">
                                <p class="col-lg-3"> <a href="/contactus" class="btn btn-primary">Про Odoo</a> </p>
                                <p class="col-lg-6"> <a href="/contactus" class="btn btn-primary">Отримати демо</a> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-item oe_img_bg o_bg_img_center pt152 pb152 darken-bg" style="background-image: url('/helloworld_module/static/src/img/main_page/first_section_carousel_5.jpg');height: 800px" data-name="Slide" height="800px">
                <div class="container oe_unremovable">
                    <div class="row">
                        <div class="carousel-content col-lg-9 hw_mainpage_carousel">
                            <h2 class="display-3-fs">To do with Odoo.</h2>
                            <p class="lead">Диджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи.</p>
                            <div class="row">
                                <p class="col-lg-3"> <a href="/contactus" class="btn btn-primary">Про Odoo</a> </p>
                                <p class="col-lg-6"> <a href="/contactus" class="btn btn-primary">Отримати демо</a> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </xpath>

        <xpath expr="//div[@class='carousel-content col-lg-6']" position="replace">
            <div class="row">
                <div class="carousel-content col-lg-9 hw_mainpage_carousel">
                    <h2 class="display-3-fs">To do with Odoo.</h2>
                    <p class="lead">Диджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи.</p>
                    <div class="row">
                        <p class="col-lg-3"> <a href="/contactus" class="btn btn-primary">Про Odoo</a> </p>
                        <p class="col-lg-6"> <a href="/contactus" class="btn btn-primary">Отримати демо</a> </p>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='carousel-content col-lg-8 offset-lg-2 bg-black-50 text-center pt48 pb40']" position="replace">
            <div class="row">
                <div class="carousel-content col-lg-9 hw_mainpage_carousel">
                    <h2 class="display-3-fs">To do with Odoo.</h2>
                    <p class="lead">Диджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи.</p>
                    <div class="row">
                        <p class="col-lg-3"> <a href="/contactus" class="btn btn-primary">Про Odoo</a> </p>
                        <p class="col-lg-6"> <a href="/contactus" class="btn btn-primary">Отримати демо</a> </p>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='carousel-content col-lg-6 offset-lg-6']" position="replace">
            <div class="row">
                <div class="carousel-content col-lg-9 hw_mainpage_carousel">
                    <h2 class="display-3-fs">To do with Odoo.</h2>
                    <p class="lead">Диджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи.</p>
                    <div class="row">
                        <p class="col-lg-3"> <a href="/contactus" class="btn btn-primary">Про Odoo</a> </p>
                        <p class="col-lg-6"> <a href="/contactus" class="btn btn-primary">Отримати демо</a> </p>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//a[@class='carousel-control-prev o_not_editable']" position="replace" />
        <xpath expr="//a[@class='carousel-control-next o_not_editable']" position="replace" />

    </template>
</odoo>