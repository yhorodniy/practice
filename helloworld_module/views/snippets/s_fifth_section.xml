<odoo>
    <template id="s_fifth_section">
        <script type="text/javascript" src="/helloworld_module/static/src/js/accordion.js"></script>
        <section style="position:relative;padding-top:80px;padding-bottom:40px;">
            <div style="position:absolute;top:-132px;left:0;">
                <img loading="lazy" decoding="async" width="182" height="264" src="/helloworld_module/static/src/img/Union-4.svg" alt="" style="width:100%;height:145.05%;max-width:182px"/>
            </div>
            <h2 class="text-center" style="font-size: 50px; font-weight:500">
                <!-- Співпраця -->
                Cooperation
            </h2>
            <div class="text-center" style="background-color:#FE5000;width:100px;height:1px;margin:45px auto" />
            <div class="container">
                <div class="fifth_section_accordion">
                    
                    <t t-foreach="coop_list" t-as="coop_item">
                        <div class="fifth_section_accordion_item">
                            <i class="fa fa-plus" />
                            <div class="fifth_section_accordion_header">
                                <span t-esc="coop_item.get('id')" />
                                <span t-esc="coop_item.get('title')" />
                            </div>
                            <div class="fifth_section_accordion_content">
                                <p t-esc="coop_item.get('descr')" />
                            </div>
                        </div>                        
                    </t>

                </div>
                <div class="fifth_section_btns">
                    <button class="presentation_btn">Order a presentation</button>
                    <button class="callback_btn">Call back</button>
                </div>
            </div>
        </section>
    </template>
</odoo>
