<odoo>

    <template id="s_modules_page_first_sections">
        <section>
            <div class="secondary-bg-color">
                <div class="text-center pb40 modules_first_section">

                    <div class="mb128">
                        <h1 class="text-center mt-5" style="font-size: 96px; font-weight:500">
                            To do with Odoo - діджиталізація всіх бізнес-процесів підприємства за допомогою однієї системи
                        </h1>
                        <span class="line-100 mx-auto mt56" />
                    </div>

                    <t t-foreach="modules_list" t-as="module_item">
                        <div class="position-relative">
                            <div id="absolute_img">
                                <svg xmlns="http://www.w3.org/2000/svg" width="182" height="264" viewBox="0 0 182 264" fill="none">
                                    <path id="svg-path" fill-rule="evenodd" clip-rule="evenodd" d="M98.7887 -1.72728e-05C116.209 -2.03186e-05 116.236 29.2581 98.7887 29.2581L0.000809717 29.2581L0.000802235 9.78547e-06L98.7887 -1.72728e-05ZM0.000575321 87.7787L168.925 87.7787C186.372 87.7787 186.345 58.5206 168.925 58.5206L0.000567839 58.5207L0.000575321 87.7787ZM119.864 117.037C137.283 117.037 137.311 146.295 119.864 146.295L2.90939e-05 146.295L2.04634e-05 117.037L119.864 117.037ZM145.686 175.556C163.105 175.556 163.136 204.814 145.686 204.814L0.00169753 204.814L0.00169005 175.556L145.686 175.556ZM104.718 263.333C122.168 263.333 122.138 234.075 104.718 234.075L0.000638519 234.075L0.000646001 263.333L104.718 263.333Z" fill="#FE5000" stroke=""/>
                                </svg>
                            </div>
                            <div class="modules_list">
                                <h2> <t t-esc="module_item['title']" /> </h2>
                                <span class="line-100 mx-auto mt56 mb56" />
                                <div class="modules_container">

                                    <t t-foreach="module_item['items']" t-as="item">
                                    
                                        <div class="modules_item">
                                            <img t-att-src="item['img']" />
                                            <h4> <t t-esc="item['title']" /> </h4>
                                        </div>
                                        
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>

                    <div class="row justify-content-center mt-5">
                        <p class="col-lg-4"> <button id="get-demo-btn" class="btn btn-primary">Отримати демо</button> </p>
                        <p class="col-lg-4"> <button id="get-presentation-btn" class="btn btn-primary">Замовити презентацію</button> </p>
                    </div>
                        
                </div>
            </div>
        </section>
    </template>

</odoo>