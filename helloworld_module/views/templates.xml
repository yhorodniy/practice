<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="aboutus" inherit_id="website.layout" name="About Us">
        <xpath expr="//header" position="replace">
            <header>
                <nav>
                    Custom header for Helloworld website
                </nav>
            </header>
        </xpath>

        <xpath expr="//main" position="replace">
            <main>
                <div id="wrap" >
                    <div>
                        <div style="position:absolute;top:5%;left:0;">
                            <img loading="lazy" decoding="async" width="182" height="264" src="/helloworld_module/static/src/img/Union-4.svg" alt="" style="width:100%;height:145.05%;max-width:182px"/>
                        </div>
                        <t t-call="helloworld_module.first_section_view" />
                        <t t-call="helloworld_module.second_section_view" />
                        <t t-call="helloworld_module.third_section_view" />
                        <t t-call="helloworld_module.fourth_section_view" />
                        <t t-call="helloworld_module.fifth_section_view" />
                        <t t-call="helloworld_module.sixth_section_view" />
                    </div>
                    <div class="col-lg-6"></div>
                </div>
            </main>
        </xpath>

        <xpath expr="//footer" position="replace">
            <footer>
                <div id="footer">
                    Custom footer for Helloworld website
                </div>
            </footer>
        </xpath>
    </template>
</odoo>