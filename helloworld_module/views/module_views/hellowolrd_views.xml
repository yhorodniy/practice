<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id='view_helloworld_module_tree' model='ir.ui.view'>
            <field name='name'>helloworld.module.tree</field>
            <field name='model'>helloworld.module</field>
            <field name='arch' type='xml'>
                <tree
                    string='Helloworld Properties'  
                >
                    <field name='name' string='Title' />
                    <field name='properties_ids' string='Tags' />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id='view_helloworld_module_form' model='ir.ui.view'>
            <field name='name'>helloworld.module.form</field>
            <field name='model'>helloworld.module</field>
            <field name='arch' type='xml'>
                <form string='Test'>
                    <sheet>
                        <group style='
                            display: flex;
                            flex-direction: column;
                        '>
                            <div>
                                <h1 class='mb32'>
                                    <field name='name' class='mb16'/>
                                </h1>
                                <field name='properties_ids' />
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
