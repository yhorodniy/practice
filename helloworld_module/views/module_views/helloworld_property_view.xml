<odoo>
    <data>
        <!-- Tree View -->
        <record id='view_helloworld_property_tree' model='ir.ui.view'>
            <field name='name'>helloworld.property.tree</field>
            <field name='model'>helloworld.property</field>
            <field name='arch' type='xml'>
                <tree string='Helloworld Property'>
                    <field name='name' />
                    <field name='value' />
                </tree>
            </field>
        </record>        

        <!-- Form View -->
        <record id='view_helloworld_property_form' model='ir.ui.view'>
            <field name='name'>helloworld.property.form</field>
            <field name='model'>helloworld.property</field>
            <field name='arch' type='xml'>
                <form string='Helloworld Property'>
                    <sheet>
                        <field name='name' />
                        <field name='value' />
                    </sheet>
                </form>
            </field>
        </record>        
    </data >
</odoo>